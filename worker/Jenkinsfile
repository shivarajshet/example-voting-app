pipeline{
    
    agent any
    
    tools {
	maven "Maven 3.6.1"

    }

    stages {
        stage(build){
        	when {
        		changeset "**/worker/**"
        	}
            steps{
                echo "Compiling worker app.."
				dir('worker'){
		  			sh 'mvn compile'
		  			sleep 3
                }
            }	
        }
        stage(test){
        	when {
        		changeset "**/worker/**"
        	}
            steps{
                echo "Running Unit Tests on worker app.."
				dir('worker'){
		  			sh 'mvn clean test'
                  	sleep 3
				}            
        	}		
        }
        
        stage(package){
            steps{
                echo "Pacakaging worker app"
                dir('worker'){
		   			sh 'mvn package'
		   			sleep 3
                }  	
            }
        }
    }
    
    post{
        always{
            archiveArtifacts '**/target/*.jar'
	    	echo "Execution of all stages Done and packaging completed"
	    	sleep 3
        }
    }
}
